css:
  ._button-wrapper{
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    }

  button._submit{
    width: 100%;
    padding: 0;
    border-radius: 5px;
    margin-top: 35px;
    margin-bottom: 45px;
    font-size: 20px;
    }

  ._field-wrapper{
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    }

  ._field-wrapper input{
    width: 100%;
    box-sizing: border-box;
    background-color: #f5f5f5;
    border: solid #f5f5f5;
    border-radius: 3px;
    padding: 1.8%;
    }

  html{
    border: none;
    background-color: #f5f5f5;
    font-family: 'montserrat', sans-serif;
  }

  @media(max-aspect-ratio: 8/10){
    html{
    height: 100%
    }
  }

  body{
    border: none;
    margin: 0;
  }

  a{
    color: #39b54a;
    font-weight: 700;
  }

  input{
    color: white;
  }

  @media(max-aspect-ratio: 8/10){
    body{
      height: 100%;
    }
  }

  button{
    width: 85%;
    height: 50px;
    opacity: 1 !important;
    background-color: orange;
    border: none;
    border-radius: 5px;
    color: white;
    font-size: 20px;
  }

  button:hover{
    cursor: pointer;
  }

  @media(max-aspect-ratio: 8/10){
    button{
      height: 10vw;
      border-radius: 2vw;
      font-size: 4vw;
    }
  }

  p{
    color: white;
    width: 100%;
    margin-top: 0px;
    margin-left: auto;
    margin-right: auto;
    display: block;
    font-weight: 300;
  }

  @media(max-aspect-ratio: 8/10){
    p{
      font-size: 3.2vw;
    }
  }

  h1{
    color: white;
    font-size: 50px;
    line-height: 50px;
    margin-top: 15px;
    margin-bottom: 0px;
    width: 85%;
    font-weight: 100;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  h1 span{
    font-size: 40px;
  }

  @media(max-aspect-ratio: 8/10){
    h1{
      font-size: 8vw;
      line-height: 8vw;
    }
  }

  header{
    width: 100%;
    background-color: black;
    position: absolute;
    max-width: 1500px;
  }

  header img{
    display: block;
    margin-left: auto;
    margin-right: auto;
    padding: 10px;
  }

  @media(max-aspect-ratio: 8/10){
    header img{
      width: 13vw;
      height: auto;
      padding: 2vw;
    }
  }

  .container{
    max-width: 1500px;
    margin-left: auto;
    margin-right: auto;
  }

  .hide{
    display: none;
  }

  .other-option-checked{
    border-radius: 5px;
    width: 50%;
    height: 25px;
    border: none;
    padding-left: 10px;
  }

  @media(max-aspect-ratio: 8/10){
    .other-option-checked{
      width: 40vw;
      height: 4vw;
      font-size: 2.5vw;
      transform: scale(1) !important;
    }
  }

  .box{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    background-color: rgba(0,0,0,0.9);
    width: 450px;
    height: 480px;
    text-align: center;
    border-radius: 10px;
    margin-top: 30px;
    padding-bottom: 30px;
  }

  .box h1{
    flex: 3;
  }

  .box p{
    flex: 1;
  }

  .box form{
    flex: 3;
  }

  @media(max-aspect-ratio: 8/10){
    .box{
      width: 80vw;
      height: 105vw;
      padding-bottom: 10vw;
      border-radius: 2vw;
    }

    .box p{
      margin-bottom: 10vw;
    }

    .box h1{
      flex: 2.5;
    }
  }

  .input{
    display: flex;
  }

  .input p{
    margin: 0;
    margin-left: 10px;
    margin-bottom: 10px;
    text-align: left;
  }

  @media(max-aspect-ratio: 8/10){
    .input{
      align-items: center;
      margin-bottom: 4vw;
    }

    .input input{
      transform: scale(4);
    }

    .input p{
      margin-bottom: 0;
      margin-left: 3vw;
    }
  }

  section.background{
    width: 100%;
    height: 100vh;
    background-size: cover;
    background-position: top center;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  p{
    width: 75%;
    margin-bottom: 30px;
  }

  form{
    width: 75%;
  }

  form#_form_6_{
    width: 85%;
  }

  #next{
    width: 75%;
    margin-top: 30px;
    margin-bottom: 40px;
    font-size: 20px;
    color: white;
  }

  #submit{
    width: 100%;
    margin-top: 30px;
    margin-bottom: 40px;
    font-size: 20px;
    color: white;
  }

  .next{
    width: 85%;
    height: 50px;
    opacity: 1 !important;
    background-color: red;
    border: none;
  }

  [data-page='1']{
    display: none;
    }
  [data-page='2']{
    display: none;
    }
  [data-page='3']{
    display: none;
    }
  [data-page='4']{
    display: none;
    }

  [data-current='1'] [data-page='1']{
    display: flex;
    }
  [data-current='2'] [data-page='2']{
    display: flex;
    }
  [data-current='3'] [data-page='3']{
    display: flex;
    }
  [data-current='4'] [data-page='4']{
    display: flex;
    }

  .page{
    flex-direction: column;
    width: 100%;
  }

  .page .option{
    text-align: left;
  }

  .page .option label{
    color: white;
    padding-left: 2%;
    font-size: 18px;
  }

  .option input[type=checkbox]{
    -ms-transform: scale(2);
    -moz-transform: scale(2);
    -webkit-transform: scale(2);
    -o-transform: scale(2);
    padding: 10px;
    margin: 15px;
  }

  .option input[type=text]{
    -ms-transform: scale(1.1);
    -moz-transform: scale(1.1);
    -webkit-transform: scale(1.1);
    -o-transform: scale(1.1);
    padding: 4px;
    margin: 15px;
    margin-top: 10px;
    border-radius: 5px;
    border: none;
  }

  ._field-wrapper input{
    color: black;
  }

  @media(max-aspect-ratio: 8/10){
    ._field-wrapper{
      height: 8vw;
      font-size: 5vw;
    }

    ._field-wrapper input{
      height: 100%;
      font-size: 3.2vw;
      border-radius: 1vw;
    }
  }

  ._form-content{
    padding-bottom: 20px;
  }

  @media(max-aspect-ratio: 8/10){
    ._form-content{
      padding-bottom: 7vw;
    }
  }
